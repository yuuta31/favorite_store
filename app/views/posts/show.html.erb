<%= image_tag @post.images.first.image.url, size: "213x260" %>
<%= @post.name %>

  <div class="container">
    <% if current_user %>
      <%= form_for([@post , @comment]) do |f| %>
        <%= f.text_field :title, class: "form-control" %>

        <div class="form-group row" id="star">
          <%= f.label :rate,'評価 ', class:'col-md-3 col-form-label' %>
          <%= f.hidden_field :rate, id: :review_star %>
        </div>

        <%= f.text_area :text, placeholder: "コメントする", rows: "2" %>
        <%= f.submit "SEND" %>
      <% end %>
    <% else %>
      <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
    <% end %>

  </div>

  <div class="comments">
    <h4>＜コメント一覧＞</h4>
    <% if @comments %>
      <% @comments.each do |comment| %>
        <p>
          <strong><%= link_to comment.user.nickname, "users/users/#{comment.user_id}" %>：</strong>
          <%= comment.title %>
          <%= comment.text %>
          <div id="star-rate-<%= comment.id %>"></div>
          <%=link_to "削除", post_comment_path(comment.post.id, comment.id), method: :delete %>
        </p>

        <script type="application/javascript">
          $('#star-rate-<%= comment.id %>').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            readOnly: true,
            score: '<%= comment.rate %>',
          });
        </script>

      <% end %>
    <% end %>
  </div>

  <h3>いいね件数: <%= @post.likes.count %></h3>
  <% if current_user.already_liked?(@post) %>
    <%= button_to 'いいねを取り消す', post_like_path(@post), method: :delete %>
  <% else %>
    <%= button_to 'いいね', post_likes_path(@post) %>
  <% end %>

