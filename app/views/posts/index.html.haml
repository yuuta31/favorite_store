.js-postsIndex
  .image__section
    = image_tag 'patrick-tomasso-GXXYkSwndP4-unsplash' , class: "image__section--size"

  .tag__section
    .tag__section--search
      .tag-title
        = form_for [@post] , url: {controller: 'posts', action: 'search'} do |f|
          .store_name
            = f.label :store , class: 'store_name-size'
            = f.text_field :name, class: 'store_name-size form-control'
          %br
          .form_check-line.form_check-sub.form-check-inline.check_box
            - @tags.each do |tag|
              = f.check_box :tag_list , multiple: true
              = f.label " #{tag.name}(#{tag.taggings_count})" , class: 'interested'
          = f.submit "検索" , class: 'submit btn btn-outline-primary'
        %span.space_submit

  .all_store
    .all_store-recommend
      .space
        %p.left.store_adjust #aaaタグ
        - @aaa_posts.each do |post|
          .separate_store
            .separate_store-list
              %span.v_click{'v-on:click': "setPostInfo(#{post.id})"}
                .image_list
                  = image_tag post.images.first.image.url , class: "image_list-size"
                = link_to "#{post.name}", post_path(post) , data: {"turbolinks": false}
                = post.liked_users.count
        %p.right リンク

